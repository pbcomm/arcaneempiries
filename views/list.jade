extends layout

block content
    h1= title

    div.tiles
        for tile in tiles
            div.tile
                div
                    div
                        b Player:&nbsp;
                        span #{tile.user.n}
                    div
                        b Level:&nbsp;
                        span #{tile.user.t}
                    div
                        b Might:&nbsp;
                        span #{tile.user.m}
                    div
                        b Province:&nbsp;
                        span #{tile.provinceName}

                    if tile.tileType == 51 && tile.cityName
                        div
                            b City Name:&nbsp;
                            span #{tile.cityName}

                    if tile.tileType != 51
                        div
                            b Island Type:&nbsp;
                            span #{tile.tileName}

                div [x:#{tile.x}, y:#{tile.y}]
